<div class="container-480 well flexible-margin-pop-up">
  <h2 class="text-center m-b-30">Sign Up</h2>
  <div class="disable-popup font-bold font-20">x</div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name),:html => { :class => "form-horizontal"},remote: true) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group m-b-20">
      <%= f.label :email,class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.email_field :email, autofocus: true, class: "form-control" %>
      </div>
    </div>

    <div class="form-group m-b-20">
      <%= f.label :password, :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.password_field :password, autocomplete: "off", :class => "form-control" %>
      </div>
      <% if @validatable %>
        <div class="text-center">
          <em style="color: red;">(<%= @minimum_password_length %> characters minimum)</em>
        </div>
      <% end %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation,"Confirm",class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
      </div>
    </div>

    <br />

    <div class="actions form-group text-center">
      <%= f.submit "Sign Up", class: "btn btn-success btn-lg" %>
    </div>
  <% end %>
</div>

<script type="text/javascript">
    $(".disable-popup").click(function() {
      $(".ajax-signup").remove();
    })
</script>