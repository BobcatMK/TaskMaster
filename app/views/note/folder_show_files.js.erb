$(".remove-add-note").remove();
$(".append-add-note").append("<%= j(render :partial => 'folder_show_files_add_note.html.slim') %>");
$(".hide-first").css("display","inline");
$(".hide-second").css("display","none");
$(".m-l-20.overflowing-text").remove();
$(".append-after-folder-<%=@this_folder.id%>").append("<%= j(render :partial => 'folder_show_files.html.slim') %>");
$(".display-none-folder-<%=@this_folder.id%>").css("display","inline");
$(".parent-icon-folder-<%=@this_folder.id%>").css("display","none");

<% if @this_folder.notes.length == 0 %>
    $(".big-empty-new-task").empty();
    $(".big-empty-new-task").append("<%= j(render :partial => 'folder_show_files_no_notes.html.slim') %>");
<% else %>
    $(".big-empty-new-task").empty();
    $(".big-empty-new-task").append("<%= j(render :partial => 'folder_show_files_select_note.html.slim') %>");
<% end %>

$(".hide-second").click(function() {
    $(this).css("display","none");
    $(this).siblings("a").css("display","inline");
    $(".m-l-20.overflowing-text").remove();
});